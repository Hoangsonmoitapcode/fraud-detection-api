{
  "build": {
    "dockerfilePath": "Dockerfile",
    "buildCommand": "echo 'Building with Git LFS support...'",
    "watchPatterns": [
      "src/**",
      "requirements-prod.txt",
      "Dockerfile"
    ]
  },
  "deploy": {
    "startCommand": "uvicorn src.main:app --host 0.0.0.0 --port $PORT --workers 1 --timeout-keep-alive 30",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "sleepApplication": false
  },
  "environments": {
    "production": {
      "variables": {
        "MODEL_PATH": "/app/phobert_sms_classifier.pkl",
        "PYTHONUNBUFFERED": "1",
        "PYTHONDONTWRITEBYTECODE": "1",
        "TOKENIZERS_PARALLELISM": "false"
      }
    }
  }
}